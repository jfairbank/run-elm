{
  "name": "run-elm",
  "version": "2.3.0",
  "description": "Run Elm code from the command line",
  "files": [
    "lib",
    "README.md"
  ],
  "main": "lib/index.js",
  "engines": {
    "node": ">=12.0.0"
  },
  "bin": {
    "run-elm": "lib/cli.js"
  },
  "scripts": {
    "clean:test": "git clean -d -f -X test/integration",
    "lint": "eslint src test --ignore-pattern elm-stuff",
    "prebuild": "rimraf lib",
    "build": "babel src --out-dir lib",
    "postbuild": "copyfiles --up 1 \"src/*.elm.template\" lib",
    "pretest": "npm run build",
    "test": "jest --runInBand",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jfairbank/run-elm.git"
  },
  "keywords": [
    "elm",
    "command",
    "command line",
    "run",
    "evaluate"
  ],
  "author": "Jeremy Fairbank <elpapapollo@gmail.com> (http://jeremyfairbank.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jfairbank/run-elm/issues"
  },
  "homepage": "https://github.com/jfairbank/run-elm#readme",
  "dependencies": {
    "commander": "^8.2.0",
    "fs-extra": "^10.0.0",
    "node-elm-compiler": "^5.0.6",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.2",
    "execa": "^5.1.1",
    "jest": "^27.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "test/"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/test/.*/run-elm-main.*\\.js",
      "<rootDir>/test/.*/RunElmMain.*\\.elm"
    ]
  }
}
